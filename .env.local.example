# Environment variables for LOCAL development
# Copy this file to .env.local and customize as needed

# Django Settings
DEBUG=True
SECRET_KEY=local-dev-secret-key-change-this
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Database (Local PostgreSQL in Docker)
DB_NAME=crypto_tracker_local
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432

# Or use external database (comment out above and uncomment below)
# DATABASE_URL=postgresql://postgres:postgres@46.62.216.158:5432/crypto_tracker_db

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Email (Optional for local testing)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Stripe (Optional for local testing)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Telegram Bot (Optional for local testing)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_BOT_USERNAME=your_bot_username

# Docker Environment Flag
DOCKER_ENV=true
